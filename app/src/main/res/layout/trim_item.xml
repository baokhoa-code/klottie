<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_trim_start"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DFDFDF"
            android:text="Start frame: 0"
            android:textColor="@color/black"
            android:topLeftRadius="0dp"
            android:topRightRadius="0dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_trim_end"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DFDFDF"
            android:text="End frame: 0"
            android:textColor="@color/black"
            android:topLeftRadius="0dp"
            android:topRightRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_trim_start"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_trim_clear"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="26sp"
            android:layout_height="26sp"
            android:padding="0dp"
            app:icon="@drawable/ic_clear_change"
            app:iconSize="24sp"
            app:iconTint="#BFBFBF"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>