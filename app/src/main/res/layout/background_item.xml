<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_bg_1"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="32sp"
            android:layout_height="40sp"
            android:backgroundTint="@color/colorBg1"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_bg_2"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="32sp"
            android:layout_height="40sp"
            android:backgroundTint="@color/colorBg2"
            android:layout_marginStart="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_bg_1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_bg_3"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="32sp"
            android:layout_height="40sp"
            android:backgroundTint="@color/colorBg3"
            android:layout_marginStart="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_bg_2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_bg_4"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="32sp"
            android:layout_height="40sp"
            android:backgroundTint="@color/colorBg4"
            android:layout_marginStart="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_bg_3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_bg_5"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="32sp"
            android:layout_height="40sp"
            android:backgroundTint="@color/colorBg5"
            android:layout_marginStart="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_bg_4"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_bg_6"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="32sp"
            android:layout_height="40sp"
            android:backgroundTint="@color/colorBg6"
            android:layout_marginStart="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_bg_5"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_bg_clear"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="26sp"
            android:layout_height="26sp"
            android:padding="0dp"
            app:icon="@drawable/ic_clear_change"
            app:iconSize="24sp"
            app:iconTint="#BFBFBF"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>